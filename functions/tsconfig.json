{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "sourceMap": true,
        "outDir": "lib",
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}